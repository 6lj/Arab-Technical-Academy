                       class="flex-1 px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent text-black"
                       novalidate>
                <button type="submit" 
                        class="submit-btn bg-indigo-600 hover:bg-indigo-700 text-white px-4 py-2 rounded-lg transition relative flex-shrink-0">
                    <span class="btn-text">إرسال</span>
                    <div class="loading hidden absolute inset-0 flex items-center justify-center">
                        <svg class="animate-spin w-4 h-4" fill="none" viewBox="0 0 24 24">
                            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
