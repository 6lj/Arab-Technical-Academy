<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= course.title %> - أكاديمية العرب التقنية</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@300;400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
    <style>
        body { 
            font-family: 'Cairo', sans-serif;
            background: #f8f9fa;
            min-height: 100vh;
        }
        
        .course-hero {
            background: linear-gradient(135deg, #0B3D91 0%, #1e40af 100%);
            color: white;
        }
        
        .course-card {
            background: white;
            border-radius: 12px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
            border: 1px solid #e5e7eb;
        }
        
        .course-card:hover {
            box-shadow: 0 4px 16px rgba(0,0,0,0.15);
        }
        
        .btn-primary {
            background: #0B3D91;
            color: white;
            transition: all 0.3s ease;
        }
        
        .btn-primary:hover {
            background: #092e6e;
            transform: translateY(-1px);
        }
        
        .btn-outline {
            background: transparent;
            border: 2px solid #0B3D91;
            color: #0B3D91;
            transition: all 0.3s ease;
        }
        
        .btn-outline:hover {
            background: #0B3D91;
            color: white;
        }
        
        .progress-bar {
            background: #e5e7eb;
            height: 8px;
            border-radius: 4px;
            overflow: hidden;
        }
        
        .progress-fill {
            background: linear-gradient(90deg, #10b981 0%, #059669 100%);
            height: 100%;
            transition: width 0.3s ease;
        }
        
        .section-card {
            background: white;
            border-radius: 12px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
            border: 1px solid #e5e7eb;
            margin-bottom: 24px;
        }
        
        .instructor-card {
            background: white;
            border-radius: 12px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
            border: 1px solid #e5e7eb;
        }
        
        .rating-stars {
            color: #fbbf24;
        }
        
        .course-meta {
            display: flex;
            align-items: center;
            gap: 16px;
            flex-wrap: wrap;
        }
        
        .meta-item {
            display: flex;
            align-items: center;
            gap: 6px;
            color: #6b7280;
            font-size: 14px;
        }
        
        .course-level {
            background: #dbeafe;
            color: #1e40af;
            padding: 4px 12px;
            border-radius: 20px;
            font-size: 12px;
            font-weight: 600;
        }
        
        .course-category {
            background: #f3f4f6;
            color: #374151;
            padding: 4px 12px;
            border-radius: 20px;
            font-size: 12px;
            font-weight: 600;
        }
        
        .content-item {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 12px 0;
            border-bottom: 1px solid #f3f4f6;
        }
        
        .content-item:last-child {
            border-bottom: none;
        }
        
        .content-icon {
            width: 24px;
            height: 24px;
            margin-left: 12px;
            flex-shrink: 0;
        }
        
        .content-title {
            flex: 1;
            font-weight: 500;
            color: #374151;
        }
        
        .content-duration {
            color: #6b7280;
            font-size: 14px;
        }
        
        .completed-icon {
            color: #10b981;
            width: 20px;
            height: 20px;
        }
        
        .section-toggle {
            cursor: pointer;
            transition: all 0.3s ease;
        }
        
        .section-toggle:hover {
            background: #f9fafb;
        }
        
        .section-content {
            max-height: 0;
            overflow: hidden;
            transition: max-height 0.3s ease;
        }
        
        .section-content.open {
            max-height: 1000px;
        }
        
        .arrow-icon {
            transition: transform 0.3s ease;
        }
        
        .arrow-icon.rotated {
            transform: rotate(180deg);
        }
        
        .review-card {
            background: white;
            border-radius: 8px;
            padding: 16px;
            border: 1px solid #e5e7eb;
            margin-bottom: 16px;
        }
        
        .review-header {
            display: flex;
            align-items: center;
            gap: 12px;
            margin-bottom: 8px;
        }
        
        .review-avatar {
            width: 40px;
            height: 40px;
            background: #0B3D91;
            color: white;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: bold;
        }
        
        .review-rating {
            color: #fbbf24;
            font-size: 16px;
        }
        
        .review-comment {
            color: #374151;
            line-height: 1.6;
        }
        
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
            gap: 16px;
            margin: 16px 0;
        }
        
        .stat-item {
            text-align: center;
        }
        
        .stat-value {
            font-size: 24px;
            font-weight: bold;
            color: #0B3D91;
        }
        
        .stat-label {
            font-size: 12px;
            color: #6b7280;
            margin-top: 4px;
        }
    </style>
</head>
<body class="min-h-screen">
    <%- include('partials/header') %>
    
    <!-- Course Hero Section -->
    <section class="course-hero py-12">
        <div class="container mx-auto px-6">
            <div class="max-w-6xl mx-auto">
                <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
                    <!-- Course Info -->
                    <div class="lg:col-span-2">
                        <div class="flex items-center gap-3 mb-4">
                            <span class="course-category"><%= course.category %></span>
                            <span class="course-level">
                                <%= convertLevelToArabic(course.level) %>
                            </span>
                        </div>
                        
                        <h1 class="text-4xl font-bold text-white mb-4"><%= course.title %></h1>
                        <p class="text-lg text-blue-100 mb-6 leading-relaxed"><%= course.description %></p>
                        
                        <!-- Course Stats -->
                        <div class="stats-grid">
                            <div class="stat-item">
                                <div class="stat-value"><%= course.rating || 0 %></div>
                                <div class="stat-label">تقييم</div>
                            </div>
                            <div class="stat-item">
                                <div class="stat-value"><%= course.students_count %></div>
                                <div class="stat-label">طالب</div>
                            </div>
                            <% if (course.duration) { %>
                                <div class="stat-item">
                                    <div class="stat-value"><%= course.duration %></div>
                                    <div class="stat-label">مدة الدورة</div>
                                </div>
                            <% } %>
                        </div>
                        
                        <!-- Instructor Info -->
                        <div class="flex items-center gap-4 mt-6">
                            <div class="w-12 h-12 bg-white/20 rounded-full flex items-center justify-center">
                                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                                </svg>
                            </div>
                            <div>
                                <div class="text-sm text-blue-200">المدرب</div>
                                <div class="text-lg font-semibold text-white"><%= course.instructor_name %></div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Course Card -->
                    <div class="lg:col-span-1">
                        <div class="course-card p-6 sticky top-6">
                            <img src="<%= course.thumbnail_url %>" alt="<%= course.title %>" class="w-full rounded-lg mb-4">
                            
                            <% if (enrolled) { %>
                                <div class="mb-6">
                                    <div class="flex justify-between text-sm mb-2">
                                        <span class="font-semibold text-gray-700">التقدم في الدورة</span>
                                        <span class="font-bold text-gray-800"><%= enrollment.progress %>%</span>
                                    </div>
                                    <div class="progress-bar">
                                        <div class="progress-fill" style="width: <%= enrollment.progress %>%"></div>
                                    </div>
                                </div>
                                <a href="/learn/<%= course.id %>" class="btn-primary w-full py-3 rounded-lg font-semibold text-center block mb-4">
                                    متابعة التعلم
                                </a>
                            <% } else { %>
                                <% if (user) { %>
                                    <button onclick="enrollCourse(<%= course.id %>)" 
                                            class="btn-primary w-full py-3 rounded-lg font-semibold mb-4">
                                        التسجيل في الدورة
                                    </button>
                                <% } else { %>
                                    <a href="/login" class="btn-primary w-full py-3 rounded-lg font-semibold text-center block mb-4">
                                        سجل للالتحاق بالدورة
                                    </a>
                                <% } %>
                            <% } %>
                            
                            <div class="space-y-3 text-sm text-gray-600">
                                <div class="flex items-center gap-3">
                                    <svg class="w-5 h-5 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                                    </svg>
                                    <span>وصول مدى الحياة</span>
                                </div>
                                <div class="flex items-center gap-3">
                                    <svg class="w-5 h-5 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                                    </svg>
                                    <span>شهادة إتمام</span>
                                </div>
                                <div class="flex items-center gap-3">
                                    <svg class="w-5 h-5 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                                    </svg>
                                    <span>دعم المدربين</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    
    <!-- Main Content -->
    <div class="container mx-auto px-6 py-12">
        <div class="max-w-6xl mx-auto">
            <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
                <div class="lg:col-span-2">
                    <!-- What You'll Learn -->
                    <% if (course.what_you_learn) { %>
                        <div class="section-card p-6">
                            <h2 class="text-2xl font-bold text-gray-800 mb-6 flex items-center gap-3">
                                <svg class="w-6 h-6 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                </svg>
                                ماذا ستتعلم
                            </h2>
                            <div class="text-gray-700 whitespace-pre-line leading-relaxed"><%= course.what_you_learn %></div>
                        </div>
                    <% } %>
                    
                    <!-- Course Content -->
                    <div class="section-card p-6">
                        <h2 class="text-2xl font-bold text-gray-800 mb-6 flex items-center gap-3">
                            <svg class="w-6 h-6 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                            </svg>
                            محتوى الدورة
                        </h2>
                        <div class="space-y-4">
                            <% sections.forEach((section, sIndex) => { %>
                                <div class="border border-gray-200 rounded-lg overflow-hidden">
                                    <div class="section-toggle p-4 font-semibold cursor-pointer hover:bg-gray-50 transition-all duration-300" 
                                         onclick="toggleSection(<%= sIndex %>)">
                                        <div class="flex justify-between items-center">
                                            <span class="text-gray-800 text-lg">القسم <%= sIndex + 1 %>: <%= section.title %></span>
                                            <div class="flex items-center gap-3">
                                                <span class="text-gray-500 text-sm"><%= section.contents.length %> محاضرة</span>
                                                <svg class="w-5 h-5 text-gray-500 transition-transform duration-300 arrow-icon" id="arrow-<%= sIndex %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                                                </svg>
                                            </div>
                                        </div>
                                    </div>
                                    <div id="section-<%= sIndex %>" class="section-content bg-gray-50 p-4 space-y-3">
                                        <% section.contents.forEach(content => { %>
                                            <div class="content-item">
                                                <div class="flex items-center gap-3">
                                                    <% if (content.type === 'video') { %>
                                                        <svg class="content-icon text-red-600" fill="currentColor" viewBox="0 0 20 20">
                                                            <path d="M2 6a2 2 0 012-2h6a2 2 0 012 2v8a2 2 0 01-2 2H4a2 2 0 01-2-2V6zM14.553 7.106A1 1 0 0014 8v4a1 1 0 00.553.894l2 1A1 1 0 0018 13V7a1 1 0 00-1.447-.894l-2 1z"></path>
                                                        </svg>
                                                    <% } else if (content.type === 'quiz') { %>
                                                        <svg class="content-icon text-blue-600" fill="currentColor" viewBox="0 0 20 20">
                                                            <path fill-rule="evenodd" d="M4 4a2 2 0 00-2 2v4a2 2 0 002 2V6h10a2 2 0 00-2-2H4zm2 6a2 2 0 012-2h8a2 2 0 012 2v4a2 2 0 01-2 2H8a2 2 0 01-2-2v-4zm6 4a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"></path>
                                                        </svg>
                                                    <% } else { %>
                                                        <svg class="content-icon text-green-600" fill="currentColor" viewBox="0 0 20 20">
                                                            <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h4a2 2 0 012 2v12a2 2 0 01-2 2H6a2 2 0 01-2-2V4zm2 0v12h4V4H6z" clip-rule="evenodd"></path>
                                                        </svg>
                                                    <% } %>
                                                    <span class="content-title"><%= content.title %></span>
                                                </div>
                                                <div class="flex items-center gap-2">
                                                    <% if (content.duration) { %>
                                                        <span class="content-duration"><%= content.duration %></span>
                                                    <% } %>
                                                    <% if (enrolled && content.completed) { %>
                                                        <svg class="completed-icon" fill="currentColor" viewBox="0 0 20 20">
                                                            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                                                        </svg>
                                                    <% } %>
                                                </div>
                                            </div>
                                        <% }) %>
                                    </div>
                                </div>
                            <% }) %>
                        </div>
                    </div>
                    
                    <!-- Requirements -->
                    <% if (course.requirements) { %>
                        <div class="section-card p-6">
                            <h2 class="text-2xl font-bold text-gray-800 mb-6 flex items-center gap-3">
                                <svg class="w-6 h-6 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                </svg>
                                المتطلبات
                            </h2>
                            <div class="text-gray-700 whitespace-pre-line leading-relaxed"><%= course.requirements %></div>
                        </div>
                    <% } %>
                    
                    <!-- Reviews -->
                    <div class="section-card p-6">
                        <h2 class="text-2xl font-bold text-gray-800 mb-6 flex items-center gap-3">
                            <svg class="w-6 h-6 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"></path>
                            </svg>
                            تقييمات الطلاب
                        </h2>
                        
                        <% if (user && enrolled) { %>
                            <div class="mb-6">
                                <h3 class="text-lg font-semibold text-gray-800 mb-4">أضف تقييمك</h3>
                                <form id="reviewForm" class="space-y-4">
                                    <div>
                                        <label class="block text-sm font-medium text-gray-700 mb-2">التقييم</label>
                                        <div class="flex gap-1">
                                            <% for (let i = 1; i <= 5; i++) { %>
                                                <button type="button" class="rating-star text-2xl text-gray-300 hover:text-yellow-400 transition-colors" data-rating="<%= i %>">★</button>
                                            <% } %>
                                        </div>
                                    </div>
                                    <div>
                                        <label class="block text-sm font-medium text-gray-700 mb-2">التعليق</label>
                                        <textarea name="comment" rows="4" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500" placeholder="شاركنا رأيك في الدورة..."></textarea>
                                    </div>
                                    <button type="submit" class="btn-primary px-6 py-2 rounded-lg font-semibold">
                                        إرسال التقييم
                                    </button>
                                </form>
                            </div>
                        <% } %>
                        
                        <div class="space-y-4">
                            <% if (reviews && reviews.length > 0) { %>
                                <% reviews.forEach(review => { %>
                                    <div class="review-card">
                                        <div class="review-header">
                                            <div class="review-avatar">
                                                <%= review.user_name.charAt(0) %>
                                            </div>
                                            <div>
                                                <div class="font-semibold text-gray-800"><%= review.user_name %></div>
                                                <div class="review-rating">
                                                    <% for (let i = 1; i <= 5; i++) { %>
                                                        <% if (i <= review.rating) { %>
                                                            ★
                                                        <% } else { %>
                                                            ☆
                                                        <% } %>
                                                    <% } %>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="review-comment"><%= review.comment %></div>
                                    </div>
                                <% }) %>
                            <% } else { %>
                                <p class="text-gray-500 text-center py-8">لا توجد تقييمات بعد</p>
                            <% } %>
                        </div>
                    </div>
                </div>
                
                <!-- Sidebar -->
                <div class="lg:col-span-1">
                    <!-- Instructor Info -->
                    <div class="instructor-card p-6 mb-6">
                        <h3 class="text-xl font-bold text-gray-800 mb-4">المدرب</h3>
                        <div class="flex items-center gap-4 mb-4">
                            <div class="w-16 h-16 bg-indigo-100 rounded-full flex items-center justify-center">
                                <svg class="w-8 h-8 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                                </svg>
                            </div>
                            <div>
                                <div class="font-semibold text-gray-800"><%= course.instructor_name %></div>
                                <div class="text-sm text-gray-500">مدرب محترف</div>
                            </div>
                        </div>
                        <p class="text-gray-600 text-sm leading-relaxed">
                            مدرب محترف مع خبرة واسعة في مجال التكنولوجيا والتعليم الإلكتروني
                        </p>
                    </div>
                    
                    <!-- Certificate Section -->
                    <% if (showCertificate && certificate) { %>
                        <div class="instructor-card p-6">
                            <h3 class="text-xl font-bold text-gray-800 mb-4">شهادتك</h3>
                            <div class="text-center">
                                <div class="w-20 h-20 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
                                    <svg class="w-10 h-10 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                                    </svg>
                                </div>
                                <h4 class="font-semibold text-gray-800 mb-2">مبروك! لقد أكملت الدورة</h4>
                                <p class="text-sm text-gray-600 mb-4">يمكنك الآن تحميل شهادتك</p>
                                <a href="/verify/<%= certificate.id %>" class="btn-outline w-full py-2 rounded-lg font-semibold text-center block">
                                    عرض الشهادة
                                </a>
                            </div>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>

    <%- include('partials/footer') %>

    <script>
        function toggleSection(index) {
            const section = document.getElementById(`section-${index}`);
            const arrow = document.getElementById(`arrow-${index}`);
            
            if (section.classList.contains('open')) {
                section.classList.remove('open');
                arrow.classList.remove('rotated');
            } else {
                section.classList.add('open');
                arrow.classList.add('rotated');
            }
        }

        function enrollCourse(courseId) {
            if (!window.formValidator.validateForm(document.querySelector('form'))) {
                notifications.error('يرجى تصحيح الأخطاء قبل المتابعة');
                return;
            }
            
            fetch('/enroll', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ courseId: courseId })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    notifications.success('تم التسجيل في الدورة بنجاح!');
                    setTimeout(() => {
                        location.reload();
                    }, 1500);
                } else {
                    notifications.error(data.message || 'حدث خطأ في التسجيل');
                }
            })
            .catch(error => {
                notifications.error('حدث خطأ في الاتصال. يرجى المحاولة مرة أخرى');
            });
        }

        // Rating stars functionality
        document.addEventListener('DOMContentLoaded', function() {
            const stars = document.querySelectorAll('.rating-star');
            let selectedRating = 0;

            stars.forEach((star, index) => {
                star.addEventListener('click', function() {
                    selectedRating = index + 1;
                    updateStars();
                });

                star.addEventListener('mouseover', function() {
                    highlightStars(index + 1);
                });
            });

            document.querySelector('.rating-star')?.parentElement.addEventListener('mouseleave', function() {
                updateStars();
            });

            function updateStars() {
                stars.forEach((star, index) => {
                    if (index < selectedRating) {
                        star.classList.add('text-yellow-400');
                        star.classList.remove('text-gray-300');
                    } else {
                        star.classList.add('text-gray-300');
                        star.classList.remove('text-yellow-400');
                    }
                });
            }

            function highlightStars(rating) {
                stars.forEach((star, index) => {
                    if (index < rating) {
                        star.classList.add('text-yellow-400');
                        star.classList.remove('text-gray-300');
                    } else {
                        star.classList.add('text-gray-300');
                        star.classList.remove('text-yellow-400');
                    }
                });
            }

            // Review form submission
            const reviewForm = document.getElementById('reviewForm');
            if (reviewForm) {
                reviewForm.addEventListener('submit', function(e) {
                    e.preventDefault();
                    
                    if (selectedRating === 0) {
                        notifications.error('يرجى اختيار تقييم');
                        return;
                    }

                    const formData = new FormData(reviewForm);
                    formData.append('rating', selectedRating);
                    formData.append('courseId', '<%= course.id %>');

                    fetch('/api/review', {
                        method: 'POST',
                        body: formData
                    })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            notifications.success('تم إرسال التقييم بنجاح!');
                            setTimeout(() => {
                                location.reload();
                            }, 1500);
                        } else {
                            notifications.error(data.message || 'حدث خطأ في إرسال التقييم');
                        }
                    })
                    .catch(error => {
                        notifications.error('حدث خطأ في الاتصال. يرجى المحاولة مرة أخرى');
                    });
                });
            }
        });
    </script>
