<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>إدارة الاختبار</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@300;400;600;700&display=swap" rel="stylesheet">
    <style>
        body { font-family: 'Cairo', sans-serif; }
    </style>
</head>
<body class="bg-gray-50">
    <header class="bg-indigo-600 text-white shadow-lg">
        <nav class="container mx-auto px-4 py-4">
            <div class="flex justify-between items-center">
                <h1 class="text-2xl font-bold">إدارة الاختبار</h1>
                <a href="/admin/sections/<%= courseId %>" class="bg-white text-indigo-600 px-4 py-2 rounded hover:bg-gray-100">
                    العودة للمحتوى
                </a>
            </div>
        </nav>
    </header>

    <div class="container mx-auto px-4 py-8">
        <!-- Quiz Settings -->
        <div class="bg-white rounded-lg shadow-lg p-6 mb-6">
            <h2 class="text-2xl font-bold mb-4"><%= content.title %></h2>
            <form id="quiz-settings-form" class="grid grid-cols-1 md:grid-cols-3 gap-4">
                <div>
                    <label class="block text-sm font-bold mb-2">عنوان الاختبار</label>
                    <input type="text" id="quiz-title" value="<%= quiz.title %>" 
                           class="w-full px-3 py-2 border rounded-lg">
                </div>
                <div>
                    <label class="block text-sm font-bold mb-2">درجة النجاح (%)</label>
                    <input type="number" id="passing-score" min="0" max="100" value="<%= quiz.passing_score %>" 
                           class="w-full px-3 py-2 border rounded-lg">
                </div>
                <div>
                    <label class="block text-sm font-bold mb-2">الوقت المحدد (دقيقة)</label>
                    <input type="number" id="time-limit" min="0" value="<%= quiz.time_limit %>" 
                           class="w-full px-3 py-2 border rounded-lg">
                </div>
                <div class="md:col-span-3">
                    <button type="button" onclick="updateQuizSettings(<%= quiz.id %>)" 
                            class="bg-indigo-600 text-white px-6 py-2 rounded-lg hover:bg-indigo-700">
                        حفظ الإعدادات
                    </button>
                </div>
            </form>
        </div>

        <!-- Add Question Form -->
        <div class="bg-white rounded-lg shadow-lg p-6 mb-6">
            <h3 class="text-xl font-bold mb-4">إضافة سؤال جديد</h3>
            <form id="add-question-form" onsubmit="addQuestion(event, <%= quiz.id %>)">
                <div class="mb-4">
                    <label class="block text-sm font-bold mb-2">السؤال</label>
                    <textarea name="question" required rows="3" 
                              class="w-full px-3 py-2 border rounded-lg"
                              placeholder="اكتب السؤال هنا"></textarea>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
                    <div>
                        <label class="block text-sm font-bold mb-2">الخيار 1</label>
                        <input type="text" name="option1" required 
                               class="w-full px-3 py-2 border rounded-lg"
                               placeholder="الخيار الأول">
                    </div>
                    <div>
                        <label class="block text-sm font-bold mb-2">الخيار 2</label>
                        <input type="text" name="option2" required 
                               class="w-full px-3 py-2 border rounded-lg"
                               placeholder="الخيار الثاني">
                    </div>
                    <div>
                        <label class="block text-sm font-bold mb-2">الخيار 3</label>
                        <input type="text" name="option3" required 
                               class="w-full px-3 py-2 border rounded-lg"
                               placeholder="الخيار الثالث">
                    </div>
                    <div>
                        <label class="block text-sm font-bold mb-2">الخيار 4</label>
                        <input type="text" name="option4" required 
                               class="w-full px-3 py-2 border rounded-lg"
                               placeholder="الخيار الرابع">
                    </div>
                </div>

                <div class="mb-4">
                    <label class="block text-sm font-bold mb-2">الإجابات الصحيحة</label>
                    <div class="space-y-2">
                        <label class="flex items-center">
                            <input type="checkbox" name="correctAnswers" value="option1" class="mr-2">
                            <span>الخيار 1</span>
                        </label>
                        <label class="flex items-center">
                            <input type="checkbox" name="correctAnswers" value="option2" class="mr-2">
                            <span>الخيار 2</span>
                        </label>
                        <label class="flex items-center">
                            <input type="checkbox" name="correctAnswers" value="option3" class="mr-2">
                            <span>الخيار 3</span>
                        </label>
                        <label class="flex items-center">
                            <input type="checkbox" name="correctAnswers" value="option4" class="mr-2">
                            <span>الخيار 4</span>
                        </label>
                    </div>
                    <p class="text-sm text-gray-600 mt-2">يمكنك اختيار أكثر من إجابة صحيحة</p>
                </div>

                <div class="mb-4">
                    <label class="block text-sm font-bold mb-2">الشرح (اختياري)</label>
                    <textarea name="explanation" rows="2" 
                              class="w-full px-3 py-2 border rounded-lg"
                              placeholder="شرح الإجابة الصحيحة"></textarea>
                </div>

                <button type="submit" class="bg-green-600 text-white px-6 py-2 rounded-lg hover:bg-green-700">
                    إضافة السؤال
                </button>
            </form>
        </div>

        <!-- Questions List -->
        <div class="bg-white rounded-lg shadow-lg p-6">
            <h3 class="text-xl font-bold mb-4">أسئلة الاختبار (<%= questions.length %> سؤال)</h3>
            
            <% if (questions.length === 0) { %>
                <p class="text-gray-500 text-center py-8">لا توجد أسئلة بعد. ابدأ بإضافة سؤال جديد!</p>
            <% } else { %>
                <div class="space-y-4">
                    <% questions.forEach((q, index) => { %>
                        <div class="border rounded-lg p-4 hover:bg-gray-50">
                            <div class="flex justify-between items-start mb-3">
                                <h4 class="font-bold text-lg">السؤال <%= index + 1 %></h4>
                                <button onclick="deleteQuestion(<%= q.id %>)" 
                                        class="bg-red-600 text-white px-3 py-1 rounded text-sm hover:bg-red-700">
                                    حذف
                                </button>
                            </div>
                            
                            <p class="mb-3 text-gray-800"><%= q.question %></p>
                            
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-2 mb-3">
                                <% const options = JSON.parse(q.options); %>
                                <% 
                                    let correctAnswers = [];
                                    try {
                                        const parsedCorrectAnswer = JSON.parse(q.correctAnswer);
                                        correctAnswers = Array.isArray(parsedCorrectAnswer) ? parsedCorrectAnswer : [parsedCorrectAnswer];
                                    } catch (e) {
                                        correctAnswers = [q.correctAnswer];
                                    }
                                %>
                                <% options.forEach((option, oIndex) => { %>
                                    <div class="p-2 border rounded <%= correctAnswers.includes(option) ? 'bg-green-50 border-green-500' : 'bg-gray-50' %>">
                                        <%= option %>
                                        <% if (correctAnswers.includes(option)) { %>
                                            <span class="text-green-600 font-bold">✓ صحيح</span>
                                        <% } %>
                                    </div>
                                <% }) %>
                            </div>
                            
                            <% if (q.explanation) { %>
                                <div class="bg-blue-50 border border-blue-200 rounded p-3 text-sm">
                                    <strong>الشرح:</strong> <%= q.explanation %>
                                </div>
                            <% } %>
                        </div>
                    <% }) %>
                </div>
            <% } %>
        </div>
    </div>

    <!-- Professional Notification System -->
    <div id="notification-container" class="fixed top-4 right-4 z-50 space-y-2"></div>

    <script>
        // Professional Notification System
        class NotificationSystem {
            constructor() {
                this.container = document.getElementById('notification-container');
            }

            show(message, type = 'info', duration = 5000) {
                const notification = document.createElement('div');
                notification.className = `notification notification-${type}`;
                
                const icon = this.getIcon(type);
                const colors = this.getColors(type);
                
                notification.innerHTML = `
                    <div class="flex items-center p-4 rounded-lg shadow-lg border-r-4 ${colors.bg} ${colors.border} max-w-md">
                        <div class="flex-shrink-0">
                            ${icon}
                        </div>
                        <div class="mr-3 flex-1">
                            <p class="text-sm font-medium ${colors.text}">${message}</p>
                        </div>
                        <button class="flex-shrink-0 ${colors.text} hover:opacity-75" onclick="this.parentElement.parentElement.remove()">
                            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path>
                            </svg>
                        </button>
                    </div>
                `;
                
                this.container.appendChild(notification);
                
                setTimeout(() => {
                    if (notification.parentElement) {
                        notification.remove();
                    }
                }, duration);
                
                return notification;
            }

            getIcon(type) {
                const icons = {
                    success: '<svg class="w-5 h-5 text-green-500" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path></svg>',
                    error: '<svg class="w-5 h-5 text-red-500" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path></svg>',
                    warning: '<svg class="w-5 h-5 text-yellow-500" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path></svg>',
                    info: '<svg class="w-5 h-5 text-blue-500" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path></svg>'
                };
                return icons[type] || icons.info;
            }

            getColors(type) {
                const colors = {
                    success: { bg: 'bg-green-50', border: 'border-green-400', text: 'text-green-800' },
                    error: { bg: 'bg-red-50', border: 'border-red-400', text: 'text-red-800' },
                    warning: { bg: 'bg-yellow-50', border: 'border-yellow-400', text: 'text-yellow-800' },
                    info: { bg: 'bg-blue-50', border: 'border-blue-400', text: 'text-blue-800' }
                };
                return colors[type] || colors.info;
            }

            success(message, duration) { return this.show(message, 'success', duration); }
            error(message, duration) { return this.show(message, 'error', duration); }
            warning(message, duration) { return this.show(message, 'warning', duration); }
            info(message, duration) { return this.show(message, 'info', duration); }
        }

        // Global notification system
        window.notifications = new NotificationSystem();

        // Professional confirmation dialog
        function showConfirmDialog(message, onConfirm, onCancel = null) {
            const dialog = document.createElement('div');
            dialog.className = 'fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50';
            dialog.innerHTML = `
                <div class="bg-white rounded-lg p-6 max-w-md mx-4 shadow-xl">
                    <div class="flex items-center mb-4">
                        <div class="w-12 h-12 bg-yellow-100 rounded-full flex items-center justify-center ml-4">
                            <svg class="w-6 h-6 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
                            </svg>
                        </div>
                        <h3 class="text-lg font-bold text-gray-900">تأكيد العملية</h3>
                    </div>
                    <p class="text-gray-600 mb-6">${message}</p>
                    <div class="flex gap-3 justify-end">
                        <button class="px-4 py-2 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300 transition" onclick="this.closest('.fixed').remove()">
                            إلغاء
                        </button>
                        <button class="px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 transition" onclick="this.closest('.fixed').remove(); if(typeof onConfirm === 'function') onConfirm();">
                            تأكيد
                        </button>
                    </div>
                </div>
            `;
            document.body.appendChild(dialog);
        }
        async function updateQuizSettings(quizId) {
            const title = document.getElementById('quiz-title').value;
            const passingScore = document.getElementById('passing-score').value;
            const timeLimit = document.getElementById('time-limit').value;
            
            const response = await fetch('/admin/quiz/update', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({
                    quizId,
                    title,
                    passing_score: parseInt(passingScore),
                    time_limit: parseInt(timeLimit)
                })
            });
            
            const data = await response.json();
            if (data.success) {
                notifications.success('تم حفظ الإعدادات بنجاح!');
                setTimeout(() => window.location.reload(), 1000);
            } else {
                notifications.error('فشل حفظ الإعدادات');
            }
        }

        async function addQuestion(event, quizId) {
            event.preventDefault();
            const form = event.target;
            const formData = new FormData(form);
            
            const option1 = formData.get('option1');
            const option2 = formData.get('option2');
            const option3 = formData.get('option3');
            const option4 = formData.get('option4');
            const correctAnswers = formData.getAll('correctAnswers');
            
            // Validate that at least one correct answer is selected
            if (correctAnswers.length === 0) {
                notificationSystem.error('يجب اختيار إجابة صحيحة واحدة على الأقل');
                return;
            }
            
            const response = await fetch('/admin/quiz/question', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({
                    quizId,
                    question: formData.get('question'),
                    option1,
                    option2,
                    option3,
                    option4,
                    correctAnswers,
                    explanation: formData.get('explanation')
                })
            });
            
            const data = await response.json();
            if (data.success) {
                notifications.success('تم إضافة السؤال بنجاح!');
                setTimeout(() => window.location.reload(), 1000);
            } else {
                notifications.error('فشل إضافة السؤال: ' + (data.error || 'حدث خطأ'));
            }
        }

        async function deleteQuestion(id) {
            showConfirmDialog('هل أنت متأكد من حذف هذا السؤال؟', async () => {
                try {
                    const response = await fetch(`/admin/quiz/question/${id}`, {
                        method: 'DELETE'
                    });
                    const data = await response.json();
                    if (data.success) {
                        notifications.success('تم حذف السؤال بنجاح');
                        setTimeout(() => window.location.reload(), 1000);
                    } else {
                        notifications.error('فشل حذف السؤال');
                    }
                } catch (error) {
                    notifications.error('حدث خطأ في الاتصال');
                }
            });
        }
    </script>
</body>
</html>