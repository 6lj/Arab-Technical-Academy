        function checkForUnratedCourses() {
            // Get completed courses that haven't been rated
            fetch('/api/completed-courses')
            .then(response => response.json())
            .then(data => {
                if (data.success && data.courses.length > 0) {
                    // Show rating modal for the first unrated course
                    const unratedCourse = data.courses[0];
                    const hasRated = localStorage.getItem('courseRated_' + unratedCourse.id);
                    const hasSkipped = sessionStorage.getItem('ratingSkipped_' + unratedCourse.id);
                    
                    if (!hasRated && !hasSkipped) {
                        showRatingModal(unratedCourse.id);
